<Application x:Class="TeachersPet.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TeachersPet"
             StartupUri="MainWindow.xaml"
             Exit="App_OnExit">
    <Application.Resources>
         <!-- this spot is for global styling - use this to keep things consistent -->
        <Style x:Key="ModuleButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                        <GradientStop Color="Transparent"/>
                        <GradientStop Color="#25EF5300" Offset="0.25"/>
                        <GradientStop Color="#55EF5300" Offset="0.5"/>
                        <GradientStop Color="#25EF5300" Offset="0.75"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Bahnschrift Light" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Foreground" Value="#FF000000" />
            <Setter Property="BorderBrush" Value="#00000000" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
    </Application.Resources>
</Application>
