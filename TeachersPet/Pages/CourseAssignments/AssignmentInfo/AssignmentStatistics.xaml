<Page x:Class="TeachersPet.Pages.CourseAssignments.AssignmentInfo.AssignmentStatistics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TeachersPet.Pages.CourseAssignments.AssignmentInfo"
      xmlns:teachersPet="clr-namespace:TeachersPet"
      mc:Ignorable="d"
      Title="AssignmentStatistics" Height="450" Width="800">
    
    <Page.Resources>
        <DataTemplate x:Key="StatisticModelDataTemplate" DataType="local:AssignmentStatistics+StatisticData">
            <WrapPanel>
                <TextBlock Text="{Binding Section.Name}"/>
                <TextBlock Text=" -> Average: "/>
                <TextBlock Text="{Binding AssignmentAverageForSection}"/>
                <TextBlock Text=""/>
            </WrapPanel>
        </DataTemplate>
    </Page.Resources>
    
    
    
    <Grid>
        
        <ListView x:Name="StatisticList" ItemTemplate="{StaticResource StatisticModelDataTemplate}">
            
        </ListView>
        
        
    </Grid>
</Page>
